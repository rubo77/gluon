#!/usr/bin/lua

local unistd = require 'posix.unistd'
local util = require 'gluon.util'
local site = require 'gluon.site'

local offline_flag_file = "/tmp/gluon_no_gw"

-- Check reachability of a gateway
local exit_code = os.execute('batctl gwl -H | grep -v "gateways in range"')

if exit_code > 0 then
	-- Check if we were previously offline
	if unistd.access(offline_flag_file) then
		os.exit(0)
	end
	-- Create offline flag
	local f = io.open(offline_flag_file, "w")
	f:write(tostring(util.get_uptime()))
	f:close()
else
	os.remove(offline_flag_file)
end
